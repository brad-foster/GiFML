<div id="name-tagline">
  <h1>GiFML</h1>
  <h3>-your life in gif form-</h3>
</div>

<% if user_signed_in? %>
  <button id='sign-in'>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
  </button>
<% else %>
  <button id='sign-in'>
  <%= link_to('Login', new_user_session_path)  %>
  </button>
<% end %>

<div id="user-input">
  <label id="question"></label>
  <form>
    <input type="text" class="search-keyword" id="search-keyword">
    <input type="submit" id="search-button" value="GiFML">
  </form>
</div>

<button id="save-button" type="button">Save My Gifs</button>
<button id="reset-button" type="button">Reset</button>

